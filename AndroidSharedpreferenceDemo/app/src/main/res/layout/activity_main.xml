<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.komect.androidsharedpreferencedemo.MainActivity">

    <Button
        android:id="@+id/btn_normal_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="普通存储" />

    <Button
        android:id="@+id/btn_normal_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="普通获取" />

    <Button
        android:id="@+id/btn_encrypt_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加密存储" />

    <Button
        android:id="@+id/btn_encrypt_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="解密获取" />

    <TextView
        android:id="@+id/tx_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:text="结果" />

</LinearLayout>
